<!DOCTYPE html>
<html lang="zh" id="forum" ng-app="forum">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/content/bootstrap/css")
    @Styles.Render("~/content/css")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="site-header">
            <div class="collapse navbar-collapse navbar-left">
                <a class="site-brand" href="/"></a>
                <a class="site-name" href="/">ENode Forum</a>
            </div>
            <div class="collapse navbar-collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-lg-2 sidebar-left">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Menu Item 1</a></li>
                            <li><a href="#">Menu Item 2</a></li>
                            <li><a href="#">Menu Item 3</a></li>
                            <li><a href="#">Menu Item 4</a></li>
                            <li><a href="#">Menu Item 2</a></li>
                            <li><a href="#">Menu Item 3</a></li>
                            <li><a href="#">Menu Item 4</a></li>
                            <li><a href="#">Menu Item 2</a></li>
                            <li><a href="#">Menu Item 3</a></li>
                            <li><a href="#">Menu Item 4</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-10 content">
            @RenderBody()
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <hr>
            <footer class="text-center">
                <p>Developed by netfocus.</p>
            </footer>
        </div>
    </div>
    <script>
        @functions{
            string TokenHeaderValue()
            {
                string cookieToken, formToken;
                AntiForgery.GetTokens(null, out cookieToken, out formToken);
                return cookieToken + ":" + formToken;
            }
        }
        var requestVerificationToken = '@TokenHeaderValue()';
    </script>
    @Scripts.Render("~/content/jquery")
    @Scripts.Render("~/content/bootstrap/js")
    @Scripts.Render("~/content/angularjs")
    @Scripts.Render("~/content/bootbox")
    @Scripts.Render("~/content/js")
    @RenderSection("Scripts", required: false)
</body>
</html>
