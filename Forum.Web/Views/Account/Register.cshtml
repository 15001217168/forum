@model Forum.Web.Models.RegisterModel
@{
    ViewBag.Title = "新用户注册";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<center>
    <div class="register_wrapper" ng-controller="RegisterController">
        <form class="form-horizontal" role="form">
            <fieldset>
                <legend>新用户注册</legend>
                <div class="form-group">
                    <label for="accountName" class="col-sm-2 control-label">用户名</label>
                    <div class="col-sm-6">
                        <input type="text" id="accountName" class="form-control" ng-model="newAccount.accountName" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">密码</label>
                    <div class="col-sm-6">
                        <input type="password" id="password" class="form-control" ng-model="newAccount.password" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">密码确认</label>
                    <div class="col-sm-6">
                        <input type="password" id="confirmPassword" class="form-control" ng-model="newAccount.confirmPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-6">
                        <span class="error" ng-show="errorMsg != ''">{{errorMsg}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-6">
                        <button type="button" class="btn btn-primary" ng-click="submit()">提交</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</center>

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/content/controllers/register-controller.js")"></script>
}
